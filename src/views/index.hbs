<div class="row">
    {{#each category}}
    <div class="col-md-3">
        <div class="card mb-3">
            <img src="{{img_category}}" class="card-img-top" alt="...">
            <div class="card-body">
                    <h4 class="card-title d-flex justify-content-center mb-3">{{categoryName}}</h4>
                    <div class="d-grid gap-2">
                        <a href="/product/{{category}}" class="btn btn-primary">Watch</a>
                    </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>