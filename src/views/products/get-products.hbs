<div class="row">
    {{#each products.docs}}
    <div class="col-md-3">
        <div class="card mb-3">
            <img src="{{img_link}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h4 class="card-title">{{product_name}}</h4>
                <p>{{description}}</p>
                <a href="{{product_link}}" class="btn btn-primary">Buy ${{price}}</a>
            </div>
            {{#if ../user}}
            <div class="card-footer text-muted d-flex justify-content-between align-content-center">
                <form action="/delete-product/{{_id}}?_method=delete" method="POST">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
                <a class="btn btn-outline-success btn-sm" href="/edit-product/{{_id}}"><i class='bx bx-edit'></i></a>
            </div>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>

<nav aria-label="Page navigation example">
    <ul class="justify-content-center pagination">
        {{#if (pagination products.totalPages)}}
            {{#if products.hasPrevPage}}
            <li class="page-item"><a class="page-link" href="/{{categories products.docs}}?page={{products.prevPage}}"><i class='bx bxs-chevron-left' ></i></a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href=""><i class='bx bxs-chevron-left' ></i></a></li>
            {{/if}}

            {{!-- sin terminar --}}
            {{#each (paginate products.totalPages products.page products.docs)}}
            {{{this}}}
            {{/each}}
            
            {{#if products.hasNextPage}}
            <li class="page-item"><a class="page-link" href="/{{categories products.docs}}?page={{products.nextPage}}"><i class='bx bxs-chevron-right'></i></a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href=""><i class='bx bxs-chevron-right'></i></a></li>
            {{/if}}
        {{/if}}
    </ul>
</nav>